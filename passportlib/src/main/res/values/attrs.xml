<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CountDownButton倒计时按钮属性 -->
    <declare-styleable name="CountDownButton" >
        <!-- 时间计数，默认为60，单位秒 -->
        <attr name="timeCount" format="integer" />
        <!-- 计时步进，默认为1 -->
        <attr name="countStep" format="integer" />
        <!-- 计时显示的文本格式 -->
        <attr name="countingText" format="string" />
        <!-- 计时结束后显示的文本格式 -->
        <attr name="endText" format="string" />
        <!-- 计时显示的文本颜色 -->
        <attr name="countingTextColor" format="color" />
        <!-- 触发倒计时的事件 -->
        <attr name="launchEvent">
            <!-- 可见时触发 -->
            <flag name="attached" value="0" />
            <!-- 点击时触发 -->
            <flag name="show" value="1" />
        </attr>
    </declare-styleable>

    <!-- PasswordEditText属性 -->
    <declare-styleable name="PasswordEditText">
        <!-- 提示文本内容 -->
        <attr name="hint" format="string" />
        <!-- 密码可视开关图标 -->
        <attr name="button" format="reference" />
    </declare-styleable>
</resources>